{
    "manifest_version": 2,
    "name": "Context Menu - Google Translate",
    "version": "1.0",

    "permissions": [
        "menus",
        "webRequest"
    ],

    "background": {
        "scripts": ["main.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://raw.githubusercontent.com/Terminator15474/firefox_translate_extension/main/updates.json"
        }
    }
}